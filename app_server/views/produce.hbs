<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Grocconnect - Fruits</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
<body class="font-serif m-0 p-0 bg-gray-100 leading-relaxed">
    {{> header}}
    <div class="bg-green-800 mx-auto w-11/12 h-auto px-5 py-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-5">
            <div class="bg-white rounded-lg shadow-md p-4 text-center transition-transform duration-300 hover:scale-105">
                <img src="img/apple.jpg" alt="Apples" class="max-w-[150px] h-[150px] object-cover mx-auto mb-3">
                <h3 class="my-3 text-gray-700">Apples</h3>
                <p class="font-bold text-green-500 text-xl">$2.29/lb</p>
                <p class="text-gray-600">Available Qty: 25</p>
                <button class="mt-2 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
                    Add to Cart
                </button>
            </div>
            <div class="bg-white rounded-lg shadow-md p-4 text-center transition-transform duration-300 hover:scale-105">
                <img src="img/banana.jpg" alt="Bananas" class="max-w-[150px] h-[150px] object-cover mx-auto mb-3">
                <h3 class="my-3 text-gray-700">Bananas</h3>
                <p class="font-bold text-green-500 text-xl">$0.49/lb</p>
                <p class="text-gray-600">Available Qty: 5</p>
                <button class="mt-2 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
                    Add to Cart
                </button>
            </div>
            <div class="bg-white rounded-lg shadow-md p-4 text-center transition-transform duration-300 hover:scale-105">
                <img src="img/orange.jpg" alt="Oranges" class="max-w-[150px] h-[150px] object-cover mx-auto mb-3">
                <h3 class="my-3 text-gray-700">Oranges</h3>
                <p class="font-bold text-green-500 text-xl">$1.00/each</p>
                <p class="text-gray-600">Available Qty: 8</p>
                <button class="mt-2 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
                    Add to Cart
                </button>
            </div>
            <div class="bg-white rounded-lg shadow-md p-4 text-center transition-transform duration-300 hover:scale-105">
                <img src="img/strawberries.jpg" alt="Strawberries" class="max-w-[150px] h-[150px] object-cover mx-auto mb-3">
                <h3 class="my-3 text-gray-700">Strawberries</h3>
                <p class="font-bold text-green-500 text-xl">$4.25/lb</p>
                <p class="text-gray-600">Available Qty: 5 </p>
                <button class="mt-2 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
                    Add to Cart
                </button>
            </div>
            <div class="bg-white rounded-lg shadow-md p-4 text-center transition-transform duration-300 hover:scale-105">
                <img src="img/grapes.jpg" alt="Grapes" class="max-w-[150px] h-[150px] object-cover mx-auto mb-3">
                <h3 class="my-3 text-gray-700">Green Grapes</h3>
                <p class="font-bold text-green-500 text-xl">$1.99/lb</p>
                <p class="text-gray-600">Available Qty: 50</p>
                <button class="mt-2 bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition-colors">
                    Add to Cart
                </button>
            </div>
        </div>
        <div class="text-center mt-5">
            <a href="home" class="text-green-1000 font-bold hover:underline"><- Back to Home</a>
        </div>
    </div>
    {{> footer}}
</body>
</html>